{
    "compilerOptions": {
        "jsx": "react-jsx",
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"]
    },
    "include": ["vite.config.ts", "./src/**/*"],
    "exclude": ["node_modules"]
}
