{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "max-len": "off",
    "indent": 2,
    "react/jsx-indent": 2,
    "react/prefer-stateless-function": 0,
    "import/newline-after-import": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    }
  },
  "env": {
    "jest": true,
    "browser": true
  }
}
